[
  {
    "method": "get",
    "path": "/",
    "handler": "handlers/index.js"
  },
  {
    "method": "get",
    "path": "/user/list",
    "handler": "handlers/list.js"
  },
  {
    "method": "post",
    "path": "/user/create",
    "handler": "handlers/create.js",
    "validate": [ {
      "param": "password",
      "type": "body",
      "validators": [
        "notEmpty",
        "isString"
      ]
    },
    {
      "param": "email",
      "type": "body",
      "validators": [
        "notEmpty",
        "isEmail"
      ]
    }, {
      "param": "name",
      "type": "body",
      "validators": [
        "notEmpty",
        "isString"
      ]
    }, {
      "param": "lastName",
      "type": "body",
      "validators": [
        "notEmpty",
        "isString"
      ]
    }]
  }
]
